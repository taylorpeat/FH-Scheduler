<%= render 'shared/content_title', title: "Login" %>

<div class="well">
  <div style="overflow: hidden;">
    <%= form_tag '/login' do %>
      <div class="form-group">
        <%= label_tag :username, "Username", class: "col-xs-12" %>
        <div class="col-md-3">
          <%= text_field_tag :username, nil, class: "form-control margin-bottom", placeholder: "Username" %>
        </div>
      </div>
      <div class="form-group">
          <%= label_tag :password, "Password", class: "col-xs-12" %>
        <div class="col-md-3">
          <%= password_field_tag :password, nil, class: "form-control margin-bottom", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group col-xs-12">
        <%= submit_tag "Login", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>