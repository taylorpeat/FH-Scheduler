<%= render 'shared/errors', error_object: @user %>

<div class="well">
  <div style="overflow: hidden;">
    <%= form_for @user, method: form_method do |f| %>
      <div class="form-group">
        <%= f.label :username, "Username", class: "col-xs-12" %>
        <div class="col-md-3">
          <%= f.text_field :username, class: "form-control margin-bottom", placeholder: "Username" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password", class: "col-xs-12" %>
        <div class="col-md-3">
          <%= f.password_field :password, class: "form-control margin-bottom", placeholder: "Password" %>
        </div>
      </div>
      <br>
      <div class="form-group col-xs-12">
        <%= f.submit submit_button_text, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>