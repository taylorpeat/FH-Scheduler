<h3><%= current_user.username || "Guest" %>'s Rosters:</h3>
<hr>
<% if !@rosters.empty? %>
  <% @rosters.each do |roster| %>
    <%= link_to roster.name, roster_path(roster), class: "btn btn-default" %>
    <br>
    <br>
  <% end %>
<% else %>
  You have no rosters.
  <br>
  <br>
<% end %>
<br>
<%= link_to "Create a new roster", new_roster_path, class: "btn btn-primary" %>